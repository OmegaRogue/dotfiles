alias imgcat='wezterm imgcat'

unalias l
unalias la
unalias ll
unalias ls
unalias lsa


if (( $+commands[bat] && ! ${+ZSH_CAT_PREFER_CAT} )); then
  typeset -g bat_params; bat_params=()

  function cat(){
    bat ${bat_params} $@
  }
  compdef cat=bat
else
  typeset -g _cat
  _cat=(=cat)

  typeset -g _cat_params
  _cat_params=()


  function cat(){
    $_cat ${_cat_params} -C $@
  }
  compdef cat=cat
fi


if [[ -f /etc/pacman.conf ]] then
	alias dragon='dragon-drag-and-drop'
fi

